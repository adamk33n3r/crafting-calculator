{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom", "es7" ],
    "noImplicitAny": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitReturns": true,
    "baseUrl": "resources/assets/ts",
    "downlevelIteration": true,
    "strict": true
  },
  "exclude": [
      "node_modules",
      "vendor",
      "public/bower_components",
      "public/node_modules"
  ]
}
